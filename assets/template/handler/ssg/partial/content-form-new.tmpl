// Delete content image from server
async function deleteContentImageFromServer(contentId, imagePath) {
  console.log('deleteContentImageFromServer called with:', contentId, imagePath);
  if (!contentId || contentId === '00000000-0000-0000-0000-000000000000') {
    console.log('Invalid contentId, returning');
    return;
  }

  try {
    // URL encode the image path for the API call
    // Send image path in request body instead of URL
    // TODO: Hardcoded port will break if backend moves to different port
    const url = `http://localhost:8081/api/v1/ssg/contents/${contentId}/images/delete`;
    console.log('Making DELETE request to:', url);

    const response = await fetch(url, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({
        image_path: imagePath
      })
    });

    console.log('Response status:', response.status);
    console.log('Response ok:', response.ok);

    if (!response.ok) {
      console.error('Failed to delete image from server:', response.statusText);
      // Refresh gallery to show current state
      loadImageGallery();
    } else {
      console.log('Image deleted successfully');
      // Refresh gallery after successful deletion
      setTimeout(() => loadImageGallery(), 500);
    }
  } catch (error) {
    console.error('Error deleting image from server:', error);
    // Refresh gallery to show current state
    loadImageGallery();
  }
}

